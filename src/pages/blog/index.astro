---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Pagination from "../../components/Pagination.astro";
import ProfileCard from "../../components/ProfileCard.astro";
import Sidebar from "../../components/Sidebar.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { paginate } from "../../utils/pagination.ts";
import { SITE_DESCRIPTION } from "../../consts";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const { items: paginatedPosts, pagination } = paginate(posts, 1, 5);

// ç®€å•çš„é˜…è¯»æ—¶é—´ä¼°ç®—ï¼ˆåŸºäºå­—æ•°ï¼‰
function estimateReadingTime(content: string): number {
	const wordsPerMinute = 200;
	const wordCount = content.length;
	return Math.ceil(wordCount / wordsPerMinute);
}

// è·å–æ‰€æœ‰åˆ†ç±»
const allCategories = [
	...new Set(posts.map((post) => post.data.category || "æœªåˆ†ç±»")),
];
---

<BaseLayout title="åšå®¢æ–‡ç« " description={SITE_DESCRIPTION}>
	<main>
		<div class="homepage-container">
			<div class="homepage-layout">
			<!-- å·¦ä¾§ï¼šä¸ªäººä¿¡æ¯ + ä¾§è¾¹æ  -->
			<div class="homepage-sidebar">
				<ProfileCard />
				<Sidebar />
			</div>

			<!-- å³ä¾§ï¼šåšå®¢åˆ—è¡¨ -->
			<div class="homepage-content">
				<h2 class="section-title">åšå®¢æ–‡ç« </h2>
				<!-- åˆ†ç±»ç­›é€‰ -->
				<div
					class="category-filter mb-8 flex flex-wrap justify-center gap-4"
				>
					<a
						href="/blog"
						class="category-link active"
						data-category="all">å…¨éƒ¨</a
					>
					{
						allCategories.map((category) => (
							<a
								href="#"
								class="category-link"
								data-category={category}
							>
								{category}
							</a>
						))
					}
				</div>

				<!-- æ–‡ç« åˆ—è¡¨ -->
				<div class="post-list">
					{paginatedPosts.map((post) => {
						const readingTime = estimateReadingTime(post.body || "");
						const wordCount = (post.body || "").length;
						
						return (
							<article class="post-card-item" data-category={post.data.category || "æœªåˆ†ç±»"}>
								<a href={`/blog/${post.id}/`} class="post-card-link">
									{post.data.heroImage && (
										<div class="post-thumbnail">
											<img 
												src={typeof post.data.heroImage === 'string' 
													? post.data.heroImage 
													: post.data.heroImage.src
												} 
												alt={post.data.title}
											/>
										</div>
									)}
									<div class="post-content">
										<div class="post-header">
											<div class="post-date">
												<FormattedDate date={post.data.pubDate} />
											</div>
											{post.data.category && (
												<span class="post-category">{post.data.category}</span>
											)}
										</div>
										<h3 class="post-title">{post.data.title}</h3>
										<p class="post-description">{post.data.description}</p>
										<div class="post-meta">
											<span>{wordCount} å­—</span>
											<span>|</span>
